{
  "version": 2,

  "functions": {
    "api/index.py": {
      "maxDuration": 30
    }
  },

  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/index.py"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/$1"
    }
  ],

  "env": {
    "DATABASE_URL": "@database_url",
    "JWT_SECRET_KEY": "@jwt_secret_key",
    "FRONTEND_URL": "@frontend_url"
  },

  "regions": ["iad1"]
}